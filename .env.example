# サーバー設定
PORT=3000
NODE_ENV=production

# MongoDB設定
MONGODB_URI=mongodb://localhost:27017/okaeri-nfc
SKIP_MONGODB=true

# JWT設定
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=90d

# サービス設定
SERVICE_BASE_URL=https://okaeri-nfc.onrender.com

# メール設定
SENDER_EMAIL=info@mamo-tag.jp
SKIP_EMAIL=false

# Gmail の場合
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
# 注: Gmailの場合、「アプリパスワード」を使用する必要があります
# https://myaccount.google.com/apppasswords

# Outlook/Office365 の場合
# EMAIL_HOST=smtp.office365.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASS=your-password

# Yahoo! メールの場合
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@yahoo.com
# EMAIL_PASS=your-app-password